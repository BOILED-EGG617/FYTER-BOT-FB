# Example .env file — COPY to .env and fill actual values. Keep this file secret.
# Replace placeholders with real values from your Facebook App / Group admin account.

# Facebook group ID (numeric)
FB_GROUP_ID=YOUR_GROUP_ID

# Long-lived Page or User access token with required permissions (replace only after obtaining securely)
FB_ACCESS_TOKEN=YOUR_LONG_LIVED_ACCESS_TOKEN

# Your Facebook numeric user ID — only this ID can issue admin commands to the bot
ADMIN_FACEBOOK_ID=YOUR_FACEBOOK_ID

# Verify token you choose for webhook verification (must match when setting up webhook)
FB_VERIFY_TOKEN=YOUR_CHOSEN_VERIFY_TOKEN

# Optional: secret for command endpoint (an extra layer to ensure only you can call /command)
ADMIN_COMMAND_SECRET=some-strong-secret-string

# Flask settings (optional)
FLASK_ENV=production
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
